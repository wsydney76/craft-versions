<div class="meta">

    {% for draft in drafts %}
        <a class="btn submit versions-button" href="{{ draft.cpEditUrl }}&draftId={{ draft.draftId }}">{{ draft.draftName }}</a>
    {% endfor %}

    {% if entry.id and not entry.isUnsavedDraft %}
        <a class="btn versions-button" href="{{ cpUrl('versions/drafts-revisions',{id:entry.sourceId, site:entry.site.handle}) }}">{{ "Drafts and Revisions"|t('versions') }}</a>
    {% endif %}
</div>
{% css %}
    .versions-button {
        margin-bottom:6px;
    }
{% endcss %}

